<Window x:Class="drivingLessonScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:drivingLessonScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label x:Name="instructor_label" Content="Select an instructor:" Height="27" VerticalAlignment="Top" Margin="10,17,653,0" HorizontalContentAlignment="Right"/>
        <ComboBox x:Name="instructor_choices" HorizontalAlignment="Left" Margin="152,20,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem x:Name="noInstructorSelected" Content="No Selection" IsSelected="True"/>
            <ComboBoxItem x:Name="instructor1" Content="Instructor 1"/>
            <ComboBoxItem x:Name="instructor2" Content="Indtructor 2" />
        </ComboBox>


    </Grid>
</Window>
